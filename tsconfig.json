{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": false,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
